html,body{
  width:100%;
  height:100%;
}
page {
-webkit-user-select:none;
user-select:none;
width:100%;
/* overflow-x:hidden; */
height:100%;
display: flex;
flex-direction: column;
overflow-y: hidden;
}
.top{
  width:100%;
  height:200px;
}
.top image{
  width:100%;
  height:100%;
}
nav{
  width:100%;
  height:100px;
  display: flex;
  justify-content: space-around;
  align-items: center;
 
}
.dl{
  display: flex;
  flex-direction: column;
 
}
.dl image{
  width:50px;
  height:50px;
}
.title{
  text-align: center;
}
.content{
  width:100%;
  display: flex;
  flex:1;
  flex-direction: column;
}
.tit{
  width:100%;
  display: flex;
  justify-content: space-between;
  padding: 5px 10px;
  box-sizing: border-box;
}
.tit p{
  font-size: 12px;
  color:#ccc;
}
.look{
  width:120%;
  display: flex;
  overflow-x: scroll;
}
.looka{
  width:100%;
  display: flex;
}
.look image{
  width:205px;
  height:114px;
}
.hh{
  display: flex;
  flex-direction: column;
  font-size: 13px;
}